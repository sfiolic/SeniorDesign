      tft.print(":");
      tft.print(tempWeekday1[2]);
      tft.setCursor(0, 140);
      tft.setTextSize(2);
      tft.print(tempWeekday2[0]);
      tft.setTextSize(1);
      tft.print("o");
      tft.setTextSize(2);
      tft.print("F");
