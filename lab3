          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekday3[0]);
        }
        else if(i == 4)
        {
          tempWeekday4[0] += 1;
          if(tempWeekday4[0] > 95)
          {
            tempWeekday4[0] = 95;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekday4[0]);
        }
        else if(i == 5)
        {
          tempWeekend1[0] += 1;
          if(tempWeekend1[0] > 95)
          {
            tempWeekend1[0] = 95;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekend1[0]);
        }
        else if(i == 6)
        {
          tempWeekend2[0] += 1;
          if(tempWeekend2[0] > 95)
          {
            tempWeekend2[0] = 95;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekend2[0]);
        }
        else if(i == 7)
        {
          tempWeekend3[0] += 1;
          if(tempWeekend3[0] > 95)
          {
            tempWeekend3[0] = 95;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekend3[0]);
        }
        else if(i == 8)
        {
          tempWeekend4[0] += 1;
          if(tempWeekend4[0] > 95)
          {
            tempWeekend4[0] = 95;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekend4[0]);
        }
      }
      //down temp
      else if (p.x > 115 && p.x < 150 && p.y > 115 && p.y < 150)
      {
        tft.fillRect(105,77,38,25,BLACK);
        if(i == 1)
        {
          tempWeekday1[0] -= 1;
          if(tempWeekday1[0] < 60)
          {
            tempWeekday1[0] = 60;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekday1[0]);
        }
        else if(i == 2)
        {
          tempWeekday2[0] -= 1;
          if(tempWeekday2[0] < 60)
          {
            tempWeekday2[0] = 60;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekday2[0]);
        }
        else if(i == 3)
        {
          tempWeekday3[0] -= 1;
          if(tempWeekday3[0] < 60)
          {
            tempWeekday3[0] = 60;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekday3[0]);
        }
        else if(i == 4)
        {
          tempWeekday4[0] -= 1;
          if(tempWeekday4[0] < 60)
          {
            tempWeekday4[0] = 60;
          }
          delay(200);
          tft.setCursor(110,80); tft.setTextSize(3);
          tft.setTextColor(YELLOW);
          tft.print(tempWeekday4[0]);
        }
        else if(i == 5)
