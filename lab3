      tft.setTextSize(2);
      tft.print(tempWeekday4[0]);
      tft.setTextSize(1);
      tft.print("o");
      tft.setTextSize(2);
      tft.print("F");
      tft.setTextSize(1);
      tft.print(" ");
      tft.setTextSize(2);
